@model List<SchedulingMeetings.Web.ViewModels.RoomViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
    Lista de Salas
</h1>
<br />

<a asp-controller="room" asp-action="addroom" class="btn btn-primary btn-lg pull-right"><i class="fas fa-plus-circle"></i> Novo</a>
<br />
<br />

<table class="table table-hover col-md-2">
    <thead>
        <tr>
            <th scope="col">Nome da Sala</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {

        <tbody>
            <tr>
                <td>@item.RoomName</td>

                <td>
                    <a asp-controller="room" asp-action="editroom" asp-route-id="@item.RoomIdentity" style="margin-left: 82%;" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                    <a asp-controller="room" asp-action="deleteroom" asp-route-id="@item.RoomIdentity" class="btnRemover btn btn-danger"><i class="fas fa-trash-alt text-light"></i></a>
                </td>
            </tr>
        </tbody>
    }
</table>